<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    android:paddingTop="70dp"
    android:paddingRight="40dp"
    tools:context=".SettingsFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnModifProfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/secondary"
        android:fontFamily="@font/inter"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:text="Modifier le profil"
        android:textAlignment="textStart"
        android:textColor="@color/textvignette"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/secondary"
        android:fontFamily="@font/inter"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:text="Changer le thème"
        android:textAlignment="textStart"
        android:textColor="@color/textvignette"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPlus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/secondary"
        android:fontFamily="@font/inter"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:text="Plus sur SQAK"
        android:textAlignment="textStart"
        android:textColor="@color/textvignette"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDeconnecter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/secondary"
        android:fontFamily="@font/inter"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:text="Se déconnecter"
        android:textAlignment="viewStart"
        android:textColor="@color/textvignette"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSupprimerCompte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/secondary"
        android:fontFamily="@font/inter"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:text="Supprimer mon compte"
        android:textAlignment="textStart"
        android:textColor="@color/textvignette"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>