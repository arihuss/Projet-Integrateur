<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/textsurbg"
    app:cardCornerRadius="16dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/textsurbg">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="408dp"
            android:layout_height="65dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/inter"
            android:text="Supprimer votre compte?"
            android:textAlignment="center"
            android:textColor="@color/textbtn"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="358dp"
            android:layout_height="59dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRevenirPop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/accent3"
                android:fontFamily="@font/inter_bold"
                android:padding="12dp"
                android:text="Revenir"
                android:textColor="@color/textbtn"
                android:textSize="22sp"
                app:strokeColor="@color/textbtn">

            </androidx.appcompat.widget.AppCompatButton>

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSupprimerPop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/accent2"
                android:fontFamily="@font/inter_bold"
                android:padding="12dp"
                android:text="Supprimer"
                android:textColor="@color/textbtn"
                android:textSize="22sp">

            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
