<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".Accueil">


    <Button
        android:id="@+id/btnSeConnecter"
        android:layout_width="225dp"
        android:layout_height="55dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="470dp"
        android:layout_marginEnd="85dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/inter_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/se_connecter"
        android:textSize="26sp"
        app:backgroundTint="@color/accent3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSinscrire"
        android:layout_width="225dp"
        android:layout_height="55dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="549dp"
        android:layout_marginEnd="85dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/inter_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/sinscrire"
        android:textSize="26sp"
        app:backgroundTint="@color/accent3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnInvite"
        android:layout_width="225dp"
        android:layout_height="55dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="671dp"
        android:layout_marginEnd="89dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/inter_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/en_invit"
        android:textSize="26sp"
        app:backgroundTint="@color/accent2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtOu"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="615dp"
        android:layout_marginEnd="125dp"
        android:text="@string/ou"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/textsurbg"
        android:fontFamily="@font/inter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="475dp"
        android:layout_height="475dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-55dp"
        android:layout_marginEnd="0dp"
        android:contentDescription="@string/logosqak"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="-32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtSlogan"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="125dp"
        android:text="@string/travaillons_ensemble_pour_l_avenir"
        android:fontFamily="@font/inter"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/textsurbg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBienvenue"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="334dp"
        android:layout_marginEnd="125dp"
        android:text="@string/bienvenue"
        android:textColor="@color/textsurbg"
        android:textAlignment="center"
        android:fontFamily="@font/inter"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewLigne1"
        android:layout_width="50dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="628dp"
        android:layout_marginEnd="75dp"
        android:layout_height="1dp"
        android:background="@color/textsurbg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/viewLigne2"
        android:layout_width="50dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="628dp"
        android:layout_marginEnd="175dp"
        android:layout_height="1dp"
        android:background="@color/textsurbg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Switch
        android:id="@+id/switchDarkMode"
        android:layout_height="50dp"
        android:text="Mode Sombre"
        android:layout_width="150dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="758dp"
        android:layout_marginEnd="125dp"
        app:backgroundTint="@color/accent3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>