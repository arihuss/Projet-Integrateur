<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ProfilUserFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgUserProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondary"
        app:shapeAppearanceOverlay="@style/CircleImageViewStyle"
        app:strokeColor="@color/secondary"
        app:strokeWidth="6dp"
        android:padding="8dp"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="60dp"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtNomUser"
        android:layout_width="91dp"
        android:layout_height="32dp"
        android:text="TextView"
        android:textColor="@color/textsurbg"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="75dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtBioUser"
        android:layout_width="180dp"
        android:layout_height="96dp"
        android:text="TextView"
        android:textColor="@color/textsurbg"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="107dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtExperienceBenevolat"
        android:layout_width="321dp"
        android:layout_height="32dp"
        android:text="Expérience de Bénévolat"
        android:textAlignment="center"
        android:textColor="@color/textsurbg"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="237dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="354dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="318dp"
        tools:ignore="MissingConstraints">

        <ListView
            android:id="@+id/lvExpUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>